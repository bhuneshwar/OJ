# Online Judge Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/onlinejudge

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# Message Queue Configuration (for code execution)
RABBITMQ_URL=amqp://localhost:5672

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (optional - for password reset, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# External APIs (optional)
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# Development/Debug Configuration
DEBUG=app:*
LOG_LEVEL=info

# Code Execution Configuration
CODE_EXECUTION_TIMEOUT=30000
MAX_CODE_SIZE=65536
EXECUTION_MEMORY_LIMIT=256
EXECUTION_TIME_LIMIT=2000

# Docker Configuration (if using Docker for code execution)
DOCKER_ENABLED=false
DOCKER_IMAGE_PREFIX=codejudge/

# Analytics and Monitoring
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=change_this_password_immediately
